<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC
   "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
   "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<definition name="baseLayout" template="/WEB-INF/baseLayout.jsp">
		<put-attribute name="title" value="Base Layout" />
		<put-attribute name="menu" value="/WEB-INF/jsp/login/welcome.jsp" />
		<put-attribute name="body" value="/WEB-INF/index.html" />
		<put-list-attribute name="jsList" cascade="true">
			<add-attribute value="/js/jquery-1.4.1.min.js" />
		</put-list-attribute>
	</definition>

	<definition name="addProductInput" extends="baseLayout">
		<put-attribute name="title" value="Add Product Input" />
		<put-attribute name="body"
			value="/WEB-INF/jsp/addProduct/addProductInput.jsp" />
		<put-list-attribute name="jsList" cascade="true"
			inherit="true">
			<add-attribute value="/js/addProduct/addProduct.js" />
		</put-list-attribute>
	</definition>

	<definition name="addProductConfirm" extends="baseLayout">
		<put-attribute name="title" value="Confirm" />
		<put-attribute name="body"
			value="/WEB-INF/jsp/addProduct/addProductConfirm.jsp" />
	</definition>

	<definition name="userRegistrationInput" extends="baseLayout">
		<put-attribute name="title" value="Register User" />
		<put-attribute name="body"
			value="/WEB-INF/jsp/userRegistration/userRegistrationInput.jsp" />
	</definition>
	
	<definition name="viewProduct" extends="baseLayout">
		<put-attribute name="title" value="View Product" />
		<put-attribute name="body"
			value="/WEB-INF/jsp/viewProduct/viewProduct.jsp" />
	</definition>

</tiles-definitions>