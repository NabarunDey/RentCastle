<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="false" />

	<package name="addProductPackage" namespace="/" extends="struts-default">

		<action name="addProductInput" class="addProductAction" method="addProductInput">
			<result name="success">/WEB-INF/jsp/addProduct/addProductInput.jsp</result>
		</action>

		<action name="addProductRecap" class="addProductAction" method="addProductRecap">
			<result name="success">/WEB-INF/jsp/addProduct/addProductRecap.jsp</result>
		</action>
		
		<action name="addProductConfirm" class="addProductAction" method="addProductConfirm">
			<result name="success">/WEB-INF/jsp/addProduct/addProductConfirm.jsp</result>
		</action>

	</package>

</struts>