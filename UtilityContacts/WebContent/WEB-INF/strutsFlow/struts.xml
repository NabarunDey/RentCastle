<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="false" />
	<constant name="struts.multipart.maxSize" value="9434542" />
	<package name="default" namespace="" extends="struts-default">
		<global-results>
			<result name="error">WEB-INF/jsp/error/error.jsp</result>
		</global-results>

		<global-exception-mappings>
			<exception-mapping exception="java.lang.Exception"
				result="error" />
		</global-exception-mappings>
	</package>

	<include file="subapp-flow-index.xml"></include>
	<include file="subapp-flow-login.xml"></include>
	<include file="subapp-flow-addproduct.xml"></include>
	<include file="subapp-flow-userregistration.xml"></include>
	<include file="subapp-flow-viewproduct.xml"></include>
	<include file="subapp-flow-search.xml"></include>
	<include file="subapp-flow-cart.xml"></include>
	<include file="subapp-flow-productManagement.xml"></include>
	<include file="subapp-flow-order.xml"></include>
	<include file="subapp-flow-payment.xml"></include>

</struts>