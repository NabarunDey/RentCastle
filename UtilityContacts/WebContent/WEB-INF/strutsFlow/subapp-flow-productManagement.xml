<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="false" />

	<package name="productManagementPackage" namespace="/" extends="default,json-default">

		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>

		<action name="getProductListByVendor" class="productManagementAction" method="getProductListByVendor">
			<result name="success" type="tiles">searchResult</result>
		</action>
		
		<action name="deleteProductFunction" class="productManagementAction" method="deleteProductFunction">
			<result name="success" type="tiles">searchResult</result>
		</action>
		
		<action name="editProductInputFunction" class="productManagementAction" method="editProductInputFunction">
			<result name="success" type="tiles">editProductInput</result>
		</action>
		
		<action name="editProductSubmitFunction" class="productManagementAction" method="editProductSubmitFunction">
			<result name="success" type="tiles">editRentOffersInput</result>
		</action>
		
		<action name="editRentOffersSubmit" class="productManagementAction" method="editRentOffersSubmit">
			<result name="success" type="tiles">editRentOffersConfirm</result>
		</action>
		
		<action name="getPendingProducts" class="productManagementAction" method="getPendingProducts">
			<result name="success" type="tiles">searchResult</result>
		</action>

	</package>

</struts>