<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="false" />

	<package name="loginPackage" namespace="/" extends="struts-default">

		<action name="loginInput" class="loginAction" method="loginInput">
			<result name="success">/WEB-INF/jsp/login/loginInput.jsp</result>
		</action>

		<action name="loginFunction" class="loginAction" method="loginFunction">
			<result name="success">/WEB-INF/jsp/login/welcome.jsp</result>
			<result name="error">/WEB-INF/jsp/login/loginInput.jsp</result>
			
		</action>

	</package>

</struts>