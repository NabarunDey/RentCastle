<?xml version='1.0' encoding='UTF-8'?>  
    <!DOCTYPE hibernate-mapping PUBLIC  
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.databaseBeans.UsersDBBean" table="users">
		<id name="username"></id>
		<property name="firstname"></property>
		<property name="lastname"></property>
		<property name="sex"></property>
		<property name="address"></property>
		<property name="city"></property>
		<property name="state"></property>
		<property name="pinno"></property>
		<property name="phoneno"></property>
		<property name="mobileno1"></property>
		<property name="mobileno2"></property>
		<property name="status"></property>
		<property name="usertype">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">com.structures.userTypes.UserType</param>
			</type>
		</property>
	</class>

</hibernate-mapping>  	