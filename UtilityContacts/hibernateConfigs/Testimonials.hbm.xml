<?xml version='1.0' encoding='UTF-8'?>  
    <!DOCTYPE hibernate-mapping PUBLIC  
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.databaseBeans.TestimonialsDBBean" table="testimonials">
		<id name="testimonialId">
			<generator class="increment"></generator>
		</id>
		<property name="displayName"></property>
		<property name="imagePath"></property>
		<property name="username"></property>
		<property name="rating"></property>
		<property name="comment"></property>
		<property name="status"></property>
	</class>

</hibernate-mapping>  	